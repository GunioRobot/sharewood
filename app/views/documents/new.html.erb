<%= form_for([@project, @project.documents.new], :html => { :multipart => true }) do |f| %>
<div class="field">
	<%= f.label :title %><br />
	<%= f.text_field :title%>
</div>
<div class="field">
	<%= f.label :description %><br />
	<%= f.text_area :description %>
</div>
<div class="field">
	File:<br />
	<%= f.file_field :resource %>
</div>
<div class="actions">
	<%= f.submit 'Add file' %>
</div>
<% end %>